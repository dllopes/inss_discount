<!DOCTYPE html>
<html>
  <head>
    <title>InssDiscount</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", integrity: "sha384-whatever-key", crossorigin: "anonymous" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                  <span class="nav-link">Logged in as: <strong><%= current_user.email %></strong></span>
                </li>
                <li class="nav-item">
                  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link text-danger' %>
                </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Flash Messages -->
    <% if notice || alert %>
      <div class="container mt-3">
        <% if notice %>
          <div class="alert alert-success" role="alert">
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger" role="alert">
            <%= alert %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Main Content -->
    <div class="container mt-4">
      <%= yield %>
    </div>
  </body>
</html>
